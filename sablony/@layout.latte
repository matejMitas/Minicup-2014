	<script>
		$(function() {
			var pull		= $('#pull');
				menu		= $('nav ul');
				menuHeight  = menu.height();

			$(pull).on('click', function(e) {
				e.preventDefault();
				menu.slideToggle();
			});

			$(window).resize(function(){
				var w = $(window).width();
				if(w > 320 && menu.is(':hidden')) {
					menu.removeAttr('style');
				}
			});
		});
	</script>

	<script>
	var toggle = function(toggleButtons, toggleTargets, toggleActive) {
		if(typeof toggleActive == "undefined") var toggleActive = "active";

		$(toggleTargets).each(function(index,el){
			if (index == 0) {
				$(el).show();
			} else {
				$(el).hide();
			}
		});

		$(toggleTargets+":first-of-type").show();

		$(toggleButtons+":first-of-type").each(function(index,el){
			$(el).addClass(toggleActive);
		});

		$(toggleButtons).click(function(event){
	   		var src = $(this).data("src");
	   		$(toggleButtons).removeClass(toggleActive);
	   		$(this).addClass(toggleActive);
			$(toggleTargets).each(function(){
				var target = $(this).data("target");
				if (target == src) {
					$(this).show();
				} else {
					$(this).hide();
				}
			});
		});
	};
	</script>
	
